{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Unit Test",
            "type": "shell",
            "command": [
                "pytest.exe -q ${workspaceFolder}\\test_unit.py -o log_cli=true  --junitxml=results.xml"
            ],
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "none"
        }
    ]
}